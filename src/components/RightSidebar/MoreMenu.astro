---
import ThemeToggleButton from './ThemeToggleButton'
import { COMMUNITY_INVITE_URL } from '../../consts'

type Props = {
  editHref: string
}

const { editHref } = Astro.props
const showMoreSection = true
---

{showMoreSection && <h2 class='heading'>More</h2>}
<ul>
  <li class={`header-link depth-2`}>
    <a href='https://skeletonkbd.com/' target='_blank'>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        fill='none'
        viewBox='0 0 24 24'
        stroke-width='1.5'
        stroke='currentColor'
        class='svg-inline--fa fa-comment-alt fa-w-16'
        height='1em'
        width='1em'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          d='M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3'></path>
      </svg>

      <span>ストアに戻る</span>
    </a>
  </li>
</ul>
<div style='margin: 2rem 0; text-align: center;'>
  <ThemeToggleButton client:visible />
</div>

<style>
  .edit-on-github {
    text-decoration: none;
    font: inherit;
    color: inherit;
    font-size: 1rem;
  }
</style>
